<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdCalculator"
    android:background="@color/black">


        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="40dp"
            android:paddingLeft="40dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="65sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number">

            <Button
                android:id="@+id/button_c"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="1dp"
                android:backgroundTint="@color/white"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:onClick="onOperationClick"/>

            <Button
                android:id="@+id/button_plus_or_minus"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/button_c"
                android:backgroundTint="@color/white"
                android:text="+/-"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:onClick="onOperationClick"/>

            <Button
                android:id="@+id/button_procent"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/button_plus_or_minus"
                android:backgroundTint="@color/white"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:onClick="onOperationClick"/>

            <Button
                android:id="@+id/button_divide"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/button_procent"
                android:backgroundTint="@color/red"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:onClick="onOperationClick"/>

            <Button
                android:id="@+id/button_7"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_c"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="1dp"
                android:onClick="onNumberClick"
                android:backgroundTint="@color/white"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="36sp"
                />

            <Button
                android:id="@+id/button_8"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_plus_or_minus"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/button_7"
                android:onClick="onNumberClick"
                android:backgroundTint="@color/white"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_procent"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/button_8"
                android:onClick="onNumberClick"
                android:backgroundTint="@color/white"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_x"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_divide"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/button_9"
                android:backgroundTint="@color/red"
                android:onClick="onOperationClick"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_4"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_7"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="1dp"
                android:onClick="onNumberClick"
                android:backgroundTint="@color/white"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_8"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/button_4"
                android:onClick="onNumberClick"
                android:backgroundTint="@color/white"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_9"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/button_5"
                android:onClick="onNumberClick"
                android:backgroundTint="@color/white"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_x"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/button_6"
                android:backgroundTint="@color/red"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:onClick="onOperationClick"/>

            <Button
                android:id="@+id/button_1"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_4"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="1dp"
                android:onClick="onNumberClick"
                android:backgroundTint="@color/white"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_5"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/button_1"
                android:onClick="onNumberClick"
                android:backgroundTint="@color/white"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_6"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/button_2"
                android:onClick="onNumberClick"
                android:backgroundTint="@color/white"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_minus"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/button_3"
                android:backgroundTint="@color/red"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:onClick="onOperationClick"/>


            <Button
                android:id="@+id/button_0"
                android:layout_width="170dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_1"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="1dp"
                android:onClick="onNumberClick"
                android:backgroundTint="@color/white"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="36sp"
                />

            <Button
                android:id="@+id/button_float"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_3"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/button_0"
                android:backgroundTint="@color/white"
                android:text="."
                android:textColor="@color/black"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_equals"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_below="@id/button_plus"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/button_float"
                android:backgroundTint="@color/red"
                android:text="="
                android:textColor="@color/white"
                android:textSize="36sp"
                android:onClick="onOperationClick"/>

            <ImageButton
                android:id="@+id/button_change_calculator"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/button_0"
                android:layout_marginRight="1dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_settings_24"
                android:text=""
                android:textColor="@color/black"
                android:textSize="36sp"
                android:onClick="changeCalculator"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/operation_field"
            android:layout_width="27dp"
            android:layout_height="17dp"
            app:layout_constraintBottom_toTopOf="@+id/number"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/result_field"
            android:layout_width="312dp"
            android:layout_height="29dp"
            android:layout_marginStart="37dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/operation_field" />

</androidx.constraintlayout.widget.ConstraintLayout>